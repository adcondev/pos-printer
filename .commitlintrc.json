{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "scope-empty": [
      2,
      "never"
    ],
    "scope-enum": [
      2,
      "always",
      [
        "composer",
        "connection",
        "commands",
        "document",
        "graphics",
        "profile",
        "service",
        "barcode",
        "bitimage",
        "character",
        "linespacing",
        "mechanismcontrol",
        "print",
        "printposition",
        "qrcode",
        "common",
        "models",
        "github",
        "gomod",
        "npm",
        "gh-actions"
      ]
    ],
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert",
        "deps"
      ]
    ],
    "subject-case": [
      2,
      "never",
      [
        "sentence-case",
        "start-case",
        "pascal-case",
        "upper-case"
      ]
    ],
    "subject-full-stop": [
      2,
      "never",
      "."
    ]
  }
}